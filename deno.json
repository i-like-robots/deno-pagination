{
	"compilerOptions": {
		"allowJs": true,
		"lib": ["dom", "es2020"],
		"strict": true
	},
	"lint": {
		"files": {
			"include": ["./src"],
			"exclude": []
		},
		"rules": {
			"tags": ["recommended"]
		}
	},
	"fmt": {
		"files": {
			"include": ["./"],
			"exclude": []
		},
		"options": {
			"useTabs": true,
			"lineWidth": 80,
			"indentWidth": 4,
			"singleQuote": true,
			"proseWrap": "preserve"
		}
	}
}
